<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
</head>
<body>
    <br>
    <h1>Edit a student page</h1>
    
    <form id="editStud" action="./" method="post">
        Edit Student:<br>
        <input type="hidden" name="id" value="{{student.ID}}">
        First name:<br>
        <input type="text" name="firstname" value="{{student.FirstName}}">
        <br>
        Last name:<br>
        <input type="text" name="lastname" value="{{student.LastName}}">
        <br>
        Grade level:<br>
        <input type="text" name="gradelevel" value="{{student.GradeLevel}}">
        <br>
        Familiar:<br>
        <input type="text" name="familiar" value="{{student.familiar}}">
        <br>
        House:<br>
        <input type="hidden" value="{{student.House}}" id="studHouse" />
        <select name="house" id="houseSelector">

            {{#each houselst}}
            <option value="{{ID}}" id="{{ID}}">{{HouseName}}</option>
            {{/each}}
        </select>
        <br><br>
        <input type="submit" value="Submit">
        
    </form>
 


    <table align="center">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Grade</th>
                <th>House</th>
                <th>Familiar</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody id="tbl2" class="rows">
            {{#each stuList}}
            <tr>
                <td>{{ID}}</td>
                <td id="fn">{{FirstName}}</td>
                <td id="ln">{{LastName}}</td>
                <td>{{GradeLevel}}</td>
                <td>{{HouseName}}</td>
                <td>{{familiar}}</td>
                <td><a href="/deleteStudent/{{ID}}">Delete</a></td>
                <td><a href="/editStudent/{{ID}}">Edit</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <script src="/getStudentHouse.js"></script>
</body>
</html>