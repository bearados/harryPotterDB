<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
</head>
<body>
    <h1>Edit a student page</h1>
    <form id="editStud" action="./" method="post">
        {{#each student}}Edit Student:<br>{{/each}}
        ID: <br>
        <input type="text" name="id" {{#each student}} value="{{ID}}"{{/each}}>
        <br>
        First name:<br>
        <input type="text" name="firstname" {{#each student}}value="{{FirstName}}{{/each}}">
        <br>
        Last name:<br>
        <input type="text" name="lastname" {{#each student}}value="{{LastName}}{{/each}}">
        <br>
        Grade level:<br>
        <input type="text" name="gradelevel" {{#each student}}value="{{GradeLevel}}{{/each}}">
        <br>
        Familiar:<br>
        <input type="text" name="familiar" {{#each student}}value="{{familiar}}{{/each}}">
        <br>
        House:<br>
        <select name="house">
            {{#each house}}
            <option value="{{ID}}">{{HouseName}}</option>
            {{/each}}
        </select>
        <br><br>
        <input type="submit" value="Submit">
    </form>
        <table align="center">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Grade</th>
                    <th>House</th>
                    <th>Familiar</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody id="tbl2" class="rows">
                {{#each stuList}}
                <tr>
                    <td id="fn">{{FirstName}}</td>
                    <td id="ln">{{LastName}}</td>
                    <td>{{GradeLevel}}</td>
                    <td>{{HouseName}}</td>
                    <td>{{familiar}}</td>
                    <td><a href="/deleteStudent/{{ID}}">Delete</a></td>
                    <td><a href="/editStudent/{{ID}}">Edit</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        
</body>
</html>